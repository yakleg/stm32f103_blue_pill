{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make clean all",
            "type": "shell",
            "command": "make clean all",
            "problemMatcher": "$gcc"
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make all",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "make flash",
            "dependsOn": "make",
            "problemMatcher": []
        },
        {
            "label": "gdbhost",
            "type": "shell",
            "isBackground": true,
            "command": "make",
            "args": [
                "gdbhost"
            ],
            "dependsOn": "flash",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ]
        }
    ]
}